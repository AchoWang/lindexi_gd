@page "/"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" style="
     font-size: @fontSize; 
     margin-left: @(marginLeft)px;
" @onclick="IncrementCount">Click me</button>

@code {
    
	string fontSize = "large";

	int marginLeft = 1;

    int currentCount = 0;

    void IncrementCount()
    {
	   if(fontSize == "large")
	   {
	       fontSize = "initial";
	   }
	   else
	   {
	       fontSize = "large";
	   }
        marginLeft++;
    }
}
