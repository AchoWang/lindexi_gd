<Window x:Class="ButtonStyle.Window1"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="自定义按钮样式" Height="391" Width="513">
    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="75"/>
    		<RowDefinition Height="52"/>
    		<RowDefinition Height="55"/>
    		<RowDefinition Height="93"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
        <Button Focusable="False" HorizontalAlignment="Left" Margin="33,33,0,8" Name="button1" Width="89">Default</Button>
        <Button Focusable="False" HorizontalAlignment="Left" Margin="33,10,0,9.008" Name="button2" Width="89" Style="{StaticResource style1}" Grid.Row="1">Style1</Button>
        <Button Focusable="False" HorizontalAlignment="Left" Margin="33,9.992,0,11" Name="button3" Width="88" Style="{StaticResource style2}" Grid.Row="2">Button</Button>
        <Image Focusable="False" Margin="158.633,-69.774,8,-16.142" Source="Aero_Grass.jpg" Grid.RowSpan="5" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        <Button Focusable="False" x:Name="button4" Margin="0,-21,29,0" Content="Vista" Template="{DynamicResource ButtonControlTemplate1}" Foreground="White" FontSize="13.333" FontFamily="Arial" HorizontalAlignment="Right" Width="144" VerticalAlignment="Top" Height="42.992" Grid.Row="1"/>
        <Button Focusable="False" x:Name="button5" HorizontalAlignment="Left" Margin="39,9,0,7" Style="{DynamicResource RadioButton}" Width="77" Content="Button" Grid.Row="3" Foreground="#FFFAEF03" BorderBrush="#FF36628C" BorderThickness="0" FontSize="16" FontFamily="微软雅黑" FontWeight="Bold"/>
    </Grid>
</Window>
