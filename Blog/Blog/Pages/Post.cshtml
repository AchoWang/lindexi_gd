        <div class="col-md-3 col-xs-12">
            @(await Html.RenderComponentAsync<Blog.Pages.SideMenu>(RenderMode.ServerPrerendered))
        </div>
        <div class="col-md-9 col-xs-12 full">

            <div class="post-content well" style="word-break: break-all;">
                <article class="content">
                    <div class="post">
                        <component type="typeof(MarkupBlog)" render-mode="ServerPrerendered"
