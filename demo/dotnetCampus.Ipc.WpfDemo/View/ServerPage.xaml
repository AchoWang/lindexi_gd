<UserControl x:Class="dotnetCampus.Ipc.WpfDemo.ServerPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:dotnetCampus.Ipc.WpfDemo"
             mc:Ignorable="d" 
             x:Name="Root"
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
            <ColumnDefinition MinWidth="200" MaxWidth="300"></ColumnDefinition>
            <ColumnDefinition Width="Auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <TextBlock Margin="10,10,2,10" VerticalAlignment="Center" Text="本地服务器名:"></TextBlock>
        <TextBox x:Name="ServerNameTextBox" Grid.Column="1" Margin="2,10,10,10" 
                  Text="{Binding ElementName=Root,Path=ServerName,Mode=TwoWay}"></TextBox>
        <Button Grid.Column="2" Margin="10,10,10,10" Content="启动服务器" Click="Button_OnClick"></Button>
    </Grid>
</UserControl>
