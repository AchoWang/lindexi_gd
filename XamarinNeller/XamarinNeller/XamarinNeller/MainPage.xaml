             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" Title="工具"
             x:Class="XamarinNeller.MainPage">

    <StackLayout>
        <Grid RowDefinitions="*,*">
            <BoxView Grid.Row="0" MinimumHeightRequest="100" HeightRequest="500" Background="#565656"></BoxView>
            <BoxView Grid.Row="1" Background="#232323"></BoxView>
        </Grid>
        <Grid x:Name="Grid">
            <ListView x:Name="ListView">
                <ListView.Header>
                    <Label Text="123"></Label>
                </ListView.Header>
            </ListView>
        </Grid>
     <Button Margin="10,10,10,10" Text="Button" Clicked="Button_OnClicked"></Button>
    </StackLayout>

</ContentPage>
